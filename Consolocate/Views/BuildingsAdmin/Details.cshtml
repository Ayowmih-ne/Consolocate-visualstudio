@model Consolocate.Models.BuildingAdminVM
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    ViewData["Title"] = "Building Details";
}

<h1>Building Details</h1>

<dl class="row">
    <dt class="col-sm-2">Code</dt>
    <dd class="col-sm-10">@Model.Code</dd>

    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Color</dt>
    <dd class="col-sm-10">@Model.Color</dd>

    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>

    <dt class="col-sm-2">ImageUrl</dt>
    <dd class="col-sm-10">@Model.ImageUrl</dd>

    <dt class="col-sm-2">QrCodeUrl</dt>
    <dd class="col-sm-10">@Model.QrCodeUrl</dd>

    <dt class="col-sm-2">Offices</dt>
    <dd class="col-sm-10"><pre>@Model.OfficesText</pre></dd>

    <dt class="col-sm-2">Coordinates</dt>
    <dd class="col-sm-10"><pre>@Model.CoordinatesJson</pre></dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
<a asp-action="Index">Back</a>
