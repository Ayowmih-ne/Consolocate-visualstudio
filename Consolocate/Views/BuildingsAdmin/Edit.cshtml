@model Consolocate.Models.BuildingAdminVM
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
    <h2>Edit Building</h2>
    <a asp-action="Index" class="btn btn-secondary">← Back to List</a>
</div>

<div class="card" style="max-width:900px; margin:0 auto;">
    <form asp-action="Edit" asp-controller="BuildingsAdmin" method="post">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Code" />
        <input type="hidden" asp-for="OfficesText" />
        <input type="hidden" asp-for="CoordinatesJson" />

        <div class="form-grid">

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" />
            </div>

            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" />
            </div>

            <div class="form-group" style="grid-column: span 2;">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="4"></textarea>
            </div>

            <div class="form-group">
                <label asp-for="Color"></label>
                <input asp-for="Color" type="color" />
            </div>

            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" />
            </div>

            <div class="form-group">
                <label asp-for="QrCodeUrl"></label>
                <input asp-for="QrCodeUrl" />
            </div>

        </div>

        <div style="margin-top:30px;">
            <button type="submit" class="btn btn-primary">Update Building</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
