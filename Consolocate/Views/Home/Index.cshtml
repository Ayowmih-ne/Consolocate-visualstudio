

    @{
        ViewData["Title"] = "ConsoLocate - LCUP Campus Navigation";
        Layout = null;
    }

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
        <title>@ViewData["Title"]</title>

        <link rel="stylesheet" href="~/css/styles.css">
    
        <link href="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.css" rel="stylesheet" />
    
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&family=Playfair+Display:wght@600&display=swap" rel="stylesheet">
    
        <link rel="icon" href="~/images/lcuplogo.png" type="image/x-icon">
    </head>
    <body>

        <div class="menu-overlay" id="menuOverlay"></div>
    <div class="side-menu" id="sideMenu">
        <div class="menu-header">
            <div class="menu-logo">
                <img src="~/images/lcuplogo.png" alt="Logo" style="width:100%; height:100%; object-fit:contain;">
            </div>
            <div>
                <h3 style="font-weight:700;">ConsoLocate</h3>
                <p style="font-size:12px; opacity:0.8;">Campus Navigation</p>
            </div>
        </div>
        <div class="menu-items">
            <div class="menu-item" onclick="showScreen('search')">
                <span class="menu-icon">🏢</span> Find Buildings
            </div>
            <div class="menu-item" onclick="showScreen('directory')">
                <span class="menu-icon">🎓</span> Academic Directory
            </div>
            <div class="menu-item" onclick="showScreen('faqs')">
                <span class="menu-icon">❓</span> Help & FAQs
            </div>
            <div class="menu-item" onclick="showAbout()">
                <span class="menu-icon">ℹ️</span> About LCUP
            </div>

            <div style="margin-top: auto; border-top: 1px solid #eee;">

                <a href="/Account/Login" class="menu-item" style="text-decoration: none; color: #dc3545;">
                    <span class="menu-icon">🔐</span> Admin Login
                </a>

                <div class="menu-item" onclick="showScreen('welcome')">
                    <span class="menu-icon">🏠</span> Back to Home
                </div>
            </div>
        </div>
    </div>

        <div class="screen active" id="welcomeScreen">
            <div class="welcome-container">
                <div class="welcome-bg-pattern"></div>
                <div class="welcome-content">
                    <div class="university-logo">
                        <img src="~/images/lcuplogo.png" alt="LCUP Logo" class="logo-img">
                    </div>
                    <h1 class="main-title">ConsoLocate</h1>
                    <h2 class="subtitle">Unitas • Caritas • Veritas</h2>
                    <p class="tagline">The Official Interactive Campus Navigation<br>of La Consolacion University Philippines</p>
                
                    <div class="welcome-actions">
                        <button class="primary-btn" onclick="showScreen('map')">
                            <span>Start Navigation</span>
                        </button>
                        <button class="secondary-btn" onclick="showScreen('search')">
                            <span>Search</span>
                        </button>
                    </div>
                
                    <p class="motto">"Your guide to finding your way around campus."</p>
                </div>
            </div>
        </div>

        <div class="screen" id="mapScreen">
            <div class="map-header-floating">
                <button class="menu-btn" onclick="toggleMenu()">
                    ☰
                </button>
                <div class="search-bar-fake" onclick="showScreen('search')">
                    <span>🔍 Search for buildings, offices...</span>
                </div>
            </div>

            <div id="campusMap"></div>
        
            <button id="fabButton" class="fab" onclick="showScreen('search')">
                🔍
            </button>
        </div>

        <div class="screen" id="searchScreen">
            <div class="app-header">
                <div class="header-left">
                    <button class="back-button" onclick="showScreen('map')">← Map</button>
                </div>
                <div class="header-center">
                    <h2 class="page-title">Find Location</h2>
                </div>
                <div class="header-right"></div>
            </div>
        
            <div class="search-section">
                <div class="search-wrapper">
                    <span class="search-icon">🔍</span>
                    <input type="text" class="search-field" id="locationSearch" placeholder="Search offices, buildings, or services..." oninput="filterLocations()">
                    <button class="search-clear" onclick="clearSearch()">✕</button>
                </div>
            </div>

            <div class="filter-section">
                <button class="filter-chip active" onclick="filterByTab('all', event)">All</button>
                <button class="filter-chip" onclick="filterByTab('admin', event)">Admin</button>
                <button class="filter-chip" onclick="filterByTab('facilities', event)">Facilities</button>
                <button class="filter-chip" onclick="filterByTab('services', event)">Services</button>
            </div>

            <div class="results-container" id="locationsList">
                </div>
        </div>

        <div class="screen" id="directoryScreen">
            <div class="app-header">
                <div class="header-left">
                    <button class="back-button" onclick="showScreen('map')">← Back</button>
                </div>
                <div class="header-center">
                    <h2 class="page-title">Directory</h2>
                </div>
                <div class="header-right"></div>
            </div>
        
            <div class="directory-section">
                <div class="section-header">
                    <h3>Colleges & Departments</h3>
                    <p>Academic units within the university</p>
                </div>
            
                <div class="colleges-container">
                     <div class="college-item" onclick="toggleCollege(this)">
                        <div class="college-badge blue"><span class="college-num">C</span></div>
                        <div class="college-details">
                            <h4>College of IT & Engineering</h4>
                            <p class="college-location">📍 IT Building</p>
                            <div class="college-expand">
                                <p class="college-dean"><strong>Dean:</strong> Dr. Sample Dean</p>
                                <p class="college-programs">BSIT, BSCS, BLIS, CpE</p>
                            </div>
                        </div>
                        <button class="expand-icon">▼</button>
                    </div>

                     <div class="college-item" onclick="toggleCollege(this)">
                        <div class="college-badge pink"><span class="college-num">N</span></div>
                        <div class="college-details">
                            <h4>College of Nursing</h4>
                            <p class="college-location">📍 Nursing Building</p>
                            <div class="college-expand">
                                <p class="college-programs">BS Nursing, MA Nursing</p>
                            </div>
                        </div>
                        <button class="expand-icon">▼</button>
                    </div>

                    <div class="college-item" onclick="toggleCollege(this)">
                        <div class="college-badge orange"><span class="college-num">B</span></div>
                        <div class="college-details">
                            <h4>College of Business & Accountancy</h4>
                            <p class="college-location">📍 Business Building</p>
                            <div class="college-expand">
                                <p class="college-programs">BSBA, BSA, HM, TM</p>
                            </div>
                        </div>
                        <button class="expand-icon">▼</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="screen" id="faqsScreen">
            <div class="app-header">
                <div class="header-left">
                    <button class="back-button" onclick="showScreen('map')">← Back</button>
                </div>
                <div class="header-center">
                    <h2 class="page-title">Help Center</h2>
                </div>
                <div class="header-right"></div>
            </div>
        
            <div class="help-container">
                <div class="help-intro">
                    <h3>How can we help?</h3>
                    <p>Frequently asked questions about campus navigation</p>
                </div>

                <div class="faq-container">
                    <div class="faq-card" onclick="toggleFaq(this)">
                        <div class="faq-header">
                            <span class="faq-q">Where is the Registrar's Office?</span>
                            <span class="faq-arrow">▼</span>
                        </div>
                        <div class="faq-body">
                            <p>The Registrar's Office is located on the Ground Floor of the Main Administration Building, near the main entrance.</p>
                        </div>
                    </div>

                    <div class="faq-card" onclick="toggleFaq(this)">
                        <div class="faq-header">
                            <span class="faq-q">Where can I pay my tuition?</span>
                            <span class="faq-arrow">▼</span>
                        </div>
                        <div class="faq-body">
                            <p>Payments are accepted at the Finance Office/Cashier, located on the Ground Floor of the Admin Building, right beside the Accounting Office.</p>
                        </div>
                    </div>

                    <div class="faq-card" onclick="toggleFaq(this)">
                        <div class="faq-header">
                            <span class="faq-q">Where is the Clinic?</span>
                            <span class="faq-arrow">▼</span>
                        </div>
                        <div class="faq-body">
                            <p>The Health & Wellness Center (Clinic) is located on the Ground Floor near the Canteen.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <div id="buildingInfoPanel" class="info-panel">
        <button class="close-btn" onclick="closeInfoPanel()">✕</button>

        <div class="panel-content">
            <img id="panelImage" src="" alt="Building Image" class="panel-img">
            <h2 id="panelTitle">Building Name</h2>
            <p id="panelDesc" class="panel-desc">Description here...</p>

            <hr>

            <h4> Offices / Facilities:</h4>
            <ul id="panelList">
            </ul>
        </div>
    </div>

        <script src="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.js"></script>
        <script src="~/js/script.js"></script>
    </body>
    </html>